#include <iostream>
#include <iomanip>

using namespace std;

class Time{
	private :
		int seconds;
		int hh,mm,ss;
	public :
		gettime();
		converttime();
		display();
		 
};

Time :: gettime()
{
	cout<<"Enter time \n";
	cout<<"Hours ="; cin>>hh;
	cout<<"minutes ="; cin>>mm;
	cout<<"seconds ="; cin>>ss;
	
}

Time :: converttime()
{
	seconds=hh*3600+mm*60+ss; 
	
}

Time :: display()
{
	cout<<"The time is ="<<setw(2)<<setfill('0')<<hh<<":"<<setw(2)<<setfill('0')<<mm<<":"<<setw(2)<<setfill('0')<<ss<<endl;
	
	cout<<"Time in seconds: "<<seconds;
}

int main()
{
	Time t;
	t.gettime();
	t.converttime();
	t.display();
	
	return 0;
}
