#include <iostream>

using namespace std;

bool prime(int n);
int main()
{
	int n, i;
	bool flag=false;
	
	cout<<"Enter positive number = ";
	cin>>n;
	for (i=2; i<=n/2; ++i){
		if (prime (i)){
			if (prime(n-i)){
				cout<<n<<" = "<<i<<" + "<<n-i<<endl;
				flag=true;
			}
		}
	}
	if (!flag)
	 cout<<n<<"cant be expressed as sum ";
	 
	return 0;	 
	
	
}

bool prime(int n)
{
	int i;
	bool is_prime=true;
	
	if ( n==0 || n==1){
		is_prime=false;
	}
	for (i = 2; i<= n/2; ++i)
	{
		if (n%i==0){
			is_prime=false;
			break;
		}
	}
	
	return is_prime;
	
}
